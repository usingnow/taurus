<%= simple_form_for(@company_extend, :url => index_company_sign_up_path, 
                    :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <%= f.simple_fields_for :user do |u_f| %>
    <fieldset>
      <%= render :partial => "form", :locals => {:u_f => u_f} %>
      <%= f.input :name %>
      <%= f.input :contact_name %> 
      <%= f.input :phone, :hint => t('admin.misc.company_extend.phone_hint') %>
      <%= f.input :contact_mobile %>
      <div class="form-actions">
        <%= f.button :submit, :value => "注册", :class => "btn btn-primary" %>
      </div>
    </fieldset>
  <% end %>  
<% end %>




