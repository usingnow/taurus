<%= simple_form_for(@person_extend, :url => user_registration_path, 
                    :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <%= f.simple_fields_for :user do |u_f| %>
    <fieldset>
      <%= render :partial => "form", :locals => {:u_f => u_f} %>
      <%= f.input :name %>
      <%= f.input :phone %> 
      <div class="form-actions">
        <%= f.button :submit, :value => "注册", :class => "btn btn-primary" %>
      </div>
    </fieldset>
  <% end %>  
<% end %>




