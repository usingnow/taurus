<div class="well">
  <a href="<%= new_admin_role_path %>" class="btn btn-primary" id="create_tag">
    <i class="icon-plus-sign"></i>
    <%= t('admin.actions.new.title',:model => t('activerecord.models.taurus/role')) %>
  </a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/role.name') %></th>
      <th><%= t('activerecord.attributes.taurus/role.description') %></th>
      <th><%= t('activerecord.attributes.taurus/role.is_reserved') %></th>
      <th><%= t('activerecord.attributes.taurus/role.set_procedure_permission') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <% @roles.each_with_index do |role,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= role.name %></td>
      <td><%= role.description %></td>
      <td><%= format_boolean(role.is_reserved) %></td>
      <td></td>
      <td>
        <a href="<%= edit_admin_role_path(role) %>" class="btn btn-primary trk-btn-short update_tag">
          <%= t('admin.actions.edit.menu') %>
        </a>
      </td>
    </tr>
  <% end %>
  <tfoot>
    <tr><td colspan="6"><%= will_paginate @roles, :renderer => BootstrapPagination::Rails %></td></tr>
  </tfoot>
</table>


