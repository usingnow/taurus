<%= simple_form_for([:admin,@group], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  
  <fieldset>
    <%= f.input :name %>
    <%= f.input :description %>

    <div class="form-actions">
    	<%= f.button :submit, :class => "btn btn-primary" %>
  	</div>
  </fieldset>
<% end %>