<%= simple_form_for([:admin,@administrator]) do |f| %>
  <%= f.error_notification %>

  <div class="attributes">
    <div class="split_content_left">
      <p>
        <%= f.input :email %>
      </p>
      <% if @administrator.id.nil? %>
        <p>
          <%= f.input :password %>
        </p>
      <% end %>
      <p>
        <%= f.input :status do %>
          <%= f.collection_radio :status, [[true, '激活'] ,[false, '锁定']], :first, :last, :checked => true %>
        <% end %>
      </p>
      <p>
        <%= f.input :name %>
      </p>
      <p>
         <%= f.input :address %>
      </p>
      <p>
         <%= f.input :phone %>
      </p>
      <p>
        <%= f.input :fax %>
      </p>
      <p>
        <%= f.input :mobile %>
      </p>
      <p>
        <%= f.input :zip_code %>
      </p>
    </div>
    <div class="clear"></div>
  </div>
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>




