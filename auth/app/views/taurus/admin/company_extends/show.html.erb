<div class="well">
  <%= link_to "<i class='icon-edit'></i> #{t('admin.actions.edit.menu')}".html_safe, edit_admin_company_extend_path(@company_extend), :class => "btn btn-primary" %>
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_company_extends_path, :class => "btn pull-right" %>
</div>

<%= flash_messages %>

<%= simple_form_for @company_extend, :url => "#", :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.simple_fields_for :user do |u_f| %>
    <fieldset>
      <%= u_f.input :email, :disabled => true %>
      <%= u_f.input :points, :disabled => true %>
      <%= u_f.association :role, :disabled => true %>

      <%= f.input :name, :disabled => true %>
      <%= f.association :industry, :disabled => true %>
      <%= f.association :company_type, :disabled => true %>        
      <%= f.association :company_scale, :disabled => true %> 
      <%= f.input :district_id, :as => :area, :disabled => true %>  
      <%= f.input :address, :disabled => true %>                
      <%= f.input :web_address, :disabled => true %>        
      <%= f.input :contact_name, :disabled => true %> 
      <%= f.input :contact_dept, :disabled => true %>
      <%= f.input :phone, :hint => t('admin.misc.company_extend.phone_hint'), :disabled => true %>
      <%= f.input :contact_mobile, :disabled => true %>
      <%= f.input :contact_sex, :collection => Taurus::CompanyExtend::SEX, :label_method => :second, 
                  :value_method => :first, :item_wrapper_class => 'inline', :checked => 1, 
                  :as => :radio_buttons, :disabled => true %>
      <%= f.input :contact_post, :disabled => true %>
      <%= f.input :fax, :disabled => true %>
      <%= f.input :zip_code, :disabled => true %>

    </fieldset>
  <% end %>  
<% end %>
