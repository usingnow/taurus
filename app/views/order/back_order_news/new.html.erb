<%= simple_form_for @inner_order_address, :url => "/order/back_order_news/preview", :html => {:id => "back_order_new"}  do |f| %>
  <%= hidden_field_tag 'user_id', @user.id  %>
  <%= f.error_notification %>
  <%= render "payment" %>

<div class="attributes">
  <div class="split_content_left_long">
    <p>
      <%= label_tag "收货人姓名" %><sapn class="red">*</sapn>
      <%= text_field :inner_order_address, :name, :required => "required" %>
    </p>
    <p>
      <%= label_tag "所属地区" %><sapn class="red">*</sapn>
      <%=raw address  nil, "inner_order_address" %>
    </p>
    <p>
      <%= label_tag "地址" %><sapn class="red">*</sapn>
      <%= text_field :inner_order_address, :address, :required => "required" %>
      请详细到路名、小区、门牌号码
    </p>
    <p>
      <%= label_tag "固定电话" %><sapn>&nbsp;</sapn>
      <%= text_field :inner_order_address, :phone %>
    </p>
    <p>
      <%= f.input :mobile, :required => "required" %>
    </p>
    <p>
      <%= label_tag "电子邮箱" %><sapn>&nbsp;</sapn>
      <%= text_field :inner_order_address, :email %>
    </p>
    <p>
      <%= label_tag "邮编" %><sapn>&nbsp;</sapn>
      <%= text_field :inner_order_address, :zip %>
    </p>
  </div>
  <div class="clear"></div>
</div>

 <div class="middle_button">
   <%= f.button :submit, :value => "预览" %>
 </div>
<% end %>

<% content_for :ready do %>
  jQuery("#back_order_new").bind("submit",function(){
    if(jQuery("#back_order_skus").children().length == 1){
      alert("请添加商品！");
      return false;
    }
  });
<% end %>