        <li class="h_li sku_list_li">
          <%= link_to (image_tag sku.main_img, :width => "120px", :height => "120px"), commodity_sku_detail_path(sku.id) %>
          <p class="sku_list_p overflow_text"><%= link_to sku.name, commodity_sku_detail_path(sku.id) %></p>
          <!--<p class="sku_list_p">市场价：&yen;99999.00</p>-->
          <strong>现价：&yen;<%= sku.cost_aft_tax %></strong>
        </li>
      <% end %>
    </ul>

    <div class="sku_list_sort">
      <h3 class="sku_list_bar_short">本类产品热销排行</h3>

      <div class="sku_list_sort_hot">
        <% @appliances_hots.each_with_index do |hot,index| %>
          <div class="has_children <% if index == 0 %>first_sku_sort<% end %>">
            <span><%= sub_str hot.name, 16  %></span>
            <%= link_to (image_tag hot.main_img, :width => "120px", :height => "120px"), commodity_sku_detail_path(hot.id) %>
            <%= link_to hot.name, commodity_sku_detail_path(hot.id), :class => "overflow_text" %>
            <a class="sku_list_sort_hot_bottom_line"><strong>&yen;<%= hot.cost_aft_tax %></strong></a>
          </div>
        <% end %>
      </div>

    </div>

  </div>
  <!-- 10th SKU List Ends -->

</div>
