<div id="main">
  <div id="main_menu_wrapper">
    <%= render "home/category" %>
  </div>

  <div id="slider_bar">
    <%= render "content/slider_bars/slider_bar" %>
  </div>

  <div id="level_2_banner_wrapper">
    <div id="level_2_banner">
    <!-- Insert the Banner for level 2 pages here -->
      <%= image_cms(0, :width => "208px", :height => "200px") %>
    </div>

    <div id="banner_1">
      <%= image_cms(1, :width => "208px", :height => "130px") %>
    </div>
  </div>

  <div id="banner_2">
    <%= render "home/browsing_histories" %>
