        <li class="h_li sku_list_li height_auto">
          <%= link_to (image_tag recommend.main_img, :width => "120px", :height => "120px"), commodity_sku_detail_path(recommend.id) %>
          <p class="sku_list_p overflow_text"><%= link_to recommend.name, commodity_sku_detail_path(recommend.id) %></p>
          <!--<p class="sku_list_p">市场价：&yen;99999.00</p>-->
          <strong>现价：<%= cny recommend.cost_aft_tax %></strong>
        </li>
      <% end %>
    </ul>
  </div>

