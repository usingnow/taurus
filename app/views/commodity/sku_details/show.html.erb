    <div id="sku_details_cart">
      <form>
        <label>我要买：</label>
        <button>-</button>
        <input type="text" />
        <button>+</button>
        <div></div>
        <button class="add_to_cart">添加到购物车</button>
        <button class="add_to_favorite"><%= image_tag "sku_details/add_to_favourite.png"%></button>
      </form>
    </div>
