<!DOCTYPE html>
<html>
<head>
  <title>Ebiz</title>
  <%= stylesheet_link_tag :all, :recursive => true%>
  <%= javascript_include_tag :defaults,'jquery-ui-1.8.16.custom.min.js' %>
  <%= javascript_include_tag 'jquery.layout-latest.js','jqgrid/i18n/grid.locale-cn.js','jqgrid/jquery.jqGrid.min.js' %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
  $(document).ready(function () {
      $('body').layout({
          north__closable:false,
          north__resizable:false
      });
      $('div.ui-layout-center').layout({
          center__paneSelector:	".center-center",
          south__paneSelector:	".center-south",
          south__size: "40%"
      });
  });
  </script>

</head>
<body>
  <div class="ui-layout-north">Ebiz</div>

  <div class="ui-layout-center">
     <%= yield %>
  </div>

  <div class="ui-layout-west">
    <div id="left_menu">
      <ul>
        <li>
          <%=link_to '管理员',admin_admins_path%>
        </li>
        <li>
         <%= link_to '新增管理员', new_admin_admin_path %>
        </li>
        <li>
          <%= link_to '管理员组', admin_admin_groups_path%>
        </li>
      </ul>
    </div>
  </div>
</body>
</html>
