<!DOCTYPE html>
<html>
<head>
  <title>Ebiz</title>
  <%= stylesheet_link_tag :all, :recursive => true%>
  <%= javascript_include_tag :defaults,'jquery-ui-1.8.16.custom.min.js' %>
  <%= javascript_include_tag 'jquery.layout-latest.js','jqgrid/jquery.jqGrid.min.js' %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
  $(document).ready(function () {
      $('body').layout({ applyDefaultStyles: true });
  });
  </script>

</head>
<body>
  <div class="ui-layout-center">
    <div id="main">
      <%= yield %>
    </div>
  </div>

  <div class="ui-layout-north">Ebiz</div>

  <div class="ui-layout-south">South</div>

  <div class="ui-layout-east">East</div>

  <div class="ui-layout-west">
    <div id="left_menu">
      <ul>
        <li>
          <%=link_to '管理员',admin_admins_path%>
        </li>
        <li>
          <%= link_to '用户组', admin_admin_groups_path%>
        </li>
      </ul>
    </div>
  </div>
</body>
</html>
