<!DOCTYPE html>
<html>
<head>
  <title>Ebiz</title>
  <%= stylesheet_link_tag :all, :recursive => true%>
  <%= javascript_include_tag :defaults,'jquery-ui-1.8.16.custom.min.js' %>
  <%= javascript_include_tag 'jquery.layout-latest.js','jqgrid/i18n/grid.locale-cn.js','jqgrid/jquery.jqGrid.min.js' %>
  <%= javascript_include_tag :ckeditor %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
  $(document).ready(function () {
      $('body').layout({
          north__closable:false,
          north__resizable:false
      });

      $("[group]").hover(function(){
        $("[group='"+$(this).attr('group')+"']").addClass("highlight");
      },function(){
        $("[group='"+$(this).attr('group')+"']").removeClass("highlight");
      });

  });
  </script>

</head>
<body>
  <div class="ui-layout-north">
    <% if administrator_signed_in? %>
      Signed in as <%= current_administrator.email %>. Not you?
      <%= link_to "Sign out", destroy_administrator_session_path %>
    <% else %>
      <%= link_to "Sign up", new_administrator_registration_path %> or
      <%= link_to "Sign in", new_administrator_session_path %>
    <% end %>
  </div>

  <div class="ui-layout-center">
     <%= yield %>
  </div>

  <div class="ui-layout-west">
    <div id="left_menu">
      <ul>
        <li>
          <%=link_to '管理员维护',admin_administrators_path%>
        </li>
        <li>
          <%= link_to '管理员组', admin_admin_groups_path%>
        </li>
        <li>
          <%= link_to '素材商品分类维护', admin_product_categories_path%>
        </li>
        <li>
          <%= link_to '素材商品', admin_products_path%>
        </li>
        <li>
          <%= link_to '供应商', admin_suppliers_path%>
        </li>
        <li>
          <%= link_to '品牌维护', admin_brands_path%>
        </li>
        <li>
          <%= link_to '媒体商品分类维护', admin_sku_categories_path%>
        </li>
        <li>
          <%= link_to '媒体商品维护', admin_skus_path%>
        </li>
        <li>
          <%= link_to '订货公司维护', admin_ordering_companies_path%>
        </li>
        <li>
          <%= link_to '采购单维护', admin_purchases_path%>
        </li>
        <li>
          <%= link_to '会员角色维护', admin_roles_path%>
        </li>
        <li>
          <%= link_to '个人会员维护', admin_person_extends_path%>
        </li>
        <li>
          <%= link_to '升级单维护', admin_escs_path%>
        </li>
        <li>
          <%= link_to '流程资料维护', admin_procedures_path%>
        </li>
        <li>
          <%= link_to '站别资料维护', admin_stations_path%>
        </li>
        <li>
          <%= link_to '流程规则维护', admin_station_procedureships_path%>
        </li>
        <li>
          <%= link_to '订单', admin_orders_path%>
        </li>
      </ul>
    </div>
  </div>
</body>
</html>
