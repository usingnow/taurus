<!DOCTYPE html>
<html>
<head>
  <title>Ebiz</title>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    $(document).ready(function () {
      $('body').layout({
          north__closable:false,
          north__resizable:false
      });

      $("[group]").hover(function(){
        $("[group='"+$(this).attr('group')+"']").addClass("highlight");
      },function(){
        $("[group='"+$(this).attr('group')+"']").removeClass("highlight");
      });
      <%= yield(:ready) %> //动态加载js
    });
  </script>

</head>
<body>
  <div class="ui-layout-north">
    <div id="header">
      <h1>壹美壹家后台管理系统</h1>
      <p>
        <% if administrator_signed_in? %>
           登录用户:<%= current_administrator.name %>
          <%= link_to "退出", destroy_administrator_session_path, :method => :delete %>
        <% else %>
          <%= link_to "登录", new_administrator_session_path %>
        <% end %>
      </p>
    </div>
  </div>

  <div class="ui-layout-center">
    <div id="main_content">
      <%= yield %>
    </div>
  </div>

  <div class="ui-layout-west">
    <div id="left_menu">
      <%= raw functions %>
    </div>
  </div>
</body>
</html>
