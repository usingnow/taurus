	  jQuery(document).ready(function(){
        <%= yield(:ready) %> //动态加载js

        for (i=0; i < 6; i++) {
          jQuery("#sku_sort_"+i).addClass("highlight")//为当前元素增加highlight类
            .children("a").show().end()//将子节点的a元素显示出来并重新定位到上次操作的元素
