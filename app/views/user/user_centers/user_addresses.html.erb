<p class="nav">您的位置：首页 >> 我的壹美壹家 >> 收货地址</p>
<div id="uc_menu_wrapper">
  <%= render "menu" %>
</div>

<div id="uc_content_wrapper">
  <h2 class="title">收货地址</h2>

  <table class="order_sku_details">
    <caption class="right"><%= link_to  "【新增常用地址】", new_user_address_user_user_centers_path %></caption>
    <thead>
      <tr>
        <th>收货人</th>
        <th>收货区域</th>
        <th>详细地址</th>
        <th>邮编</th>
        <th>固定电话</th>
        <th>移动电话</th>
        <th>电子邮箱</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @user_addresses.each do |user_address| %>
        <tr>
          <td class="small_font"><%= user_address.name %></td>
          <td class="small_font"><%= user_address.district.address %></td>
          <td class="small_font"><%= user_address.address %></td>
          <td class="small_font"><%= user_address.zip %></td>
          <td class="small_font"><%= user_address.phone %></td>
          <td class="small_font"><%= user_address.mobile %></td>
          <td class="small_font"><%= user_address.email %></td>
          <td class="small_font">
            <%= link_to "修改", edit_user_address_user_user_center_path(user_address)  %>
            <%= link_to "删除", del_user_address_user_user_center_path(user_address) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>