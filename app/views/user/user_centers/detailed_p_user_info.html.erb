<div id="uc_menu_wrapper">
  <%= render "menu" %>
</div>

<div id="uc_content_wrapper">
  <h2 class="title">用户资料</h2>
  <h3>基本信息</h3>
  <p class="p_t">用户名：</p>
  <p><%= current_user.login_no %></p>
  <p class="p_t">姓名：</p>
  <p><%= current_user.person_extend.name %></p>
  <p class="p_t">联系人称呼：</p>
  <p><%= format_value current_user.person_extend.sex, { 1 => "先生", 2 => "女士" } %></p>
  <p class="p_t">出生年月：</p>
  <p><%= current_user.person_extend.birth %>&nbsp;</p>
  <p class="p_t">邮箱地址：</p>
  <p><%= current_user.person_extend.email %>&nbsp;</p>
  <h3>联系方式</h3>
  <p class="p_t">默认区域：</p>
  <p><%= current_user.person_extend.district.address %>&nbsp;</p>
  <p class="p_t">默认地址：</p>
  <p><%= current_user.person_extend.address %>&nbsp;</p>
  <p class="p_t">默认邮编：</p>
  <p><%= current_user.person_extend.post %>&nbsp;</p>
  <p class="p_t">联系电话：</p>
  <p><%= current_user.person_extend.phone %>&nbsp;</p>
  <button>修改个人信息</button>
</div>


