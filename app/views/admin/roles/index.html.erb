<h1>角色列表</h1>

<table>
  <tr>
    <th><%= t 'attributes.role.number' %></th>
    <th><%= t 'attributes.role.name' %></th>
    <th><%= t 'attributes.role.description' %></th>
    <th><%= t 'attributes.role.is_reserve' %></th>
    <th><%= t 'attributes.role.set_procedure_permission' %></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.number %></td>
    <td><%= role.name %></td>
    <td><%= role.description %></td>
    <td><%= format_boolean(role.is_reserve) %></td>
    <td><%= link_to '设置启动流程权限', new_admin_procedure_roleship_path(:id=>role) %></td>
    <td><%= link_to 'Edit', edit_admin_role_path(role) %></td>
    <td><%= link_to 'Destroy', admin_role_path(role), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

