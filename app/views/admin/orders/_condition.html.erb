<ul class="list_info">
  <li>
    <%= symbol_label t('activerecord.attributes.order.number') %>
    <span class="red"><%= @order.number %></span>
  </li>
  <li>
    <%= symbol_label t('activerecord.attributes.order.batch') %>
    <span class="red"><%= @order.batch %></span>
  </li>
  <li>
    <%= symbol_label t('activerecord.attributes.order.order_type') %>
    <span><%= order_type @order %></span>
  </li>
  <li>
    <%= symbol_label t('activerecord.attributes.order.station') %>
    <span><%= @order.instance.station.name %></span>
  </li>
  <li>
    <%= symbol_label t('activerecord.attributes.order.user') %>
    <span><%= @order.user.name %></span>
  </li>
</ul>

<div class="right_button">
  <% @order.next_action.each do |action| %>
    <%=raw condition_action(action,@order) %>
  <% end %>
  <%= link_to "关闭页面", "#", :onclick => "return window.close()"  %>
</div>
<hr />
<table class="grid">
  <thead>
    <tr>
      <th>#</th>
      <th>商品编号</th>
      <th>商品名称</th>
      <th>单位</th>
      <th>单价</th>
      <th>数量</th>
      <th>安装</th>
      <th>安装费用</th>
      <th>组装</th>
      <th>组装费用</th>
      <th>交货期</th>
      <th>合计</th>
      <th>宁波仓库</th>
      <th>象山仓库</th>
    </tr>
  </thead>
  <% @order.order_details.each_with_index do |detail,index| %>
    <tr class="<%= set_odd_even_class index %>" group="<%= index %>">
      <td><%= index+1 %></td>
      <td><%= detail.sku.number %></td>
      <td><%= detail.sku.name %></td>
      <td><%= detail.sku.unit %></td>
      <td><%= detail.unit_price %></td>
      <td><%= detail.quantity %></td>
      <td><%= format_is_need(detail.is_need_install) %></td>
      <td><%= detail.install_cost %></td>
      <td><%= format_is_need(detail.is_need_assemble) %></td>
      <td><%= detail.assemble_cost %></td>
      <td><%= detail.sku.delivery_day %></td>
      <td><%= detail.unit_price*detail.quantity %></td>
      <td><%= detail.is_have_nb_store %></td>
      <td><%= detail.is_have_xs_store %></td>
    </tr>
  <% end %>
</table>
<ul class="order_price_info">
  <li>
    <%= symbol_label '商品总价' %>
    <%= cny @order.total_sku_amount %>
  </li>
  <li>
    <%= symbol_label '安装费' %>
    <%= cny @order.total_install_cost %>
  </li>
  <li>
    <%= symbol_label '组装费' %>
    <%= cny @order.total_assemble_cost %>
  </li>
  <li>
    <%= symbol_label '其他费用' %>
    <%= cny @order.other_cost %>
  </li>
  <li>
    <%= symbol_label '标准运费' %>
    <%= cny @order.carriage_cost %>
  </li>
  <li>
    <%= symbol_label '调整后运费' %>
    <%= cny @order.carriage_adjustment %>
  </li>
  <li>
    <%= symbol_label '合计' %>
    <%= cny @order.total_amount %>
  </li>
</ul>




<div class="attributes">
  <div class="split_content_left">
    <h2>收货人信息</h2>
    <p>
      <%= label_tag '收货人姓名：' %>
      <%= @order.name %>
    </p>
    <p>
      <%= label_tag '所属地区：' %>
      <%= @order.district.address %>
    </p><br />
    <p>
      <%= label_tag '收货地址：' %>
      <%= @order.address %>
    </p>
    <p>
      <%= label_tag '固定电话：' %>
      <%= @order.phone %><br />
    </p>
    <p>
      <%= label_tag '手机：' %>
      <%= @order.mobile %><br />
    </p>
     <p>
      <%= label_tag '电子邮箱：' %>
      <%= @order.email %><br />
    </p>
    <p>
      <%= label_tag '邮   编：' %>
      <%= @order.zip %>
    </p>
    <p>
      <%= label_tag '出库状态：' %>
      <%= format_delivery_status @order %>
    </p>
    <p>
      <%= label_tag '相关出库单：' %>
      <%= link_to @order.delivery_order.number, store_sales_order_delivery_path(@order.delivery_order.id) if @order.delivery_order %>
    </p>
  </div>
  <div class="split_content_right">
    <p id="print_link">
      <%= link_to '订单打印', order_order_print_path(@order),{:target => "blank"} %>
      【<%= link_to "已打印#{@order.order_print_sum(0)}次", order_order_prints_path(:order_id => @order, :line_type => "0") %>】
    </p>
  </div>
  <div class="clear"></div>
</div>


<h2>支付及发票信息</h2>
<div class="attributes">
  <div class="split_content_left">
    <p>
      <%= label_tag '支付方式：' %>
      <%= @order.instance.procedure.display_name %>
    </p>
    <p>
      <%= label_tag '发票类型：' %>
      <%= format_invoice_type(@order.invoice_type) %>
    </p>
    <% unless @order.invoice_type == 2 %>
      <% if @order.invoice_type == 1 %>
        <p>
          <%= label_tag '开户银行：' %>
          <%= @order.account_bank %>
        </p>
        <p>
          <%= label_tag '开户名称：' %>
          <%= @order.account_person_name %>
        </p>
        <p>
          <%= label_tag '注册电话：' %>
          <%= @order.account_phone %>
        </p>
        <p>
          <%= label_tag '银行帐号：' %>
          <%= @order.account_no %>
        </p>
        <p>
          <%= label_tag '增值税登记号：' %>
          <%= @order.added_value_tax_no %>
        </p>
        <p>
          <%= label_tag '注册地址：' %>
          <%= @order.account_reg_add %>
        </p>
      <% end %>
      <p>
         <%= label_tag '发票抬头：' %>
         <%= format_is_invoice_head @order.is_invoice_head %>
      </p>
      <% if @order.is_invoice_head == 1 %>
        <p>
          <%= label_tag '单位名称：' %>
          <%= @order.company_name %>
        </p>
      <% end %>
    <% end %>
  </div>
  <div class="clear"></div>
</div>

<h2>订单追踪</h2>
<table class="grid">
  <thead>
    <tr>
      <th>#</th>
      <th>当前站</th>
      <th>操作(条件)</th>
      <th>下一站</th>
      <th>操作者</th>
      <th>操作时间</th>
    </tr>
  </thead>
  <% @order.instance.tracks.each_with_index do |track,index| %>
    <tr class="<%= set_odd_even_class index %>" group="<%= index %>">
      <td><%= index+1 %></td>
      <td><%= track.station.name %></td>
      <td><%= track.condition.name %></td>
      <td><%= track.next_station.name %></td>
      <td><%= track.created_by %></td>
      <td><%= track.created_at %></td>
    </tr>
  <% end %>
</table>

<h2>接管记录</h2>
<table class="grid">
  <thead>
    <tr>
      <th>#</th>
      <th>操作者</th>
      <th>操作类型</th>
      <th>操作时间</th>
    </tr>
  </thead>
  <% @order.order_take_logs.each_with_index do |log,index| %>
    <tr class="<%= set_odd_even_class index %>" group="<%= index %>">
      <td><%= index+1 %></td>
      <td><%= log.created_by %></td>
      <td><%= format_order_take_log_type log.oper_type %></td>
      <td><%= log.created_at %></td>
    </tr>
  <% end %>
</table>


<h2>订单备注</h2>
<p>客户备注：<%= @order.customer_note %></p>
<p>内部备注：<%= @order.inner_note %></p>

