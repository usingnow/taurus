<div class="form-actions">
  <%= link_to "<i class='icon-edit'></i> 修改".html_safe, edit_admin_group_path(@group), :class => "btn btn-primary" if can? :update, Group %>
  <%= link_to "<i class='icon-arrow-left'></i> 返回".html_safe, admin_groups_path, :class => "btn pull-right" %>
</div>

<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.group.number' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @group.number %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.group.name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @group.name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.group.desc' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @group.desc %></span>
      </div>
    </div>
  </fieldset>
</form>








