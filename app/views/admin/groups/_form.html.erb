<%= simple_form_for([:admin,@group], :html => { :class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <fieldset>
    <%= f.input :number %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
