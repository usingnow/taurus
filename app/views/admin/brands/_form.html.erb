<%= form_for([:admin,@brand],:html => {:multipart=>true})  do |f| %>
  <% if @brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.template.header', :count => @brand.errors.size, :model => t('models.brand'))  %></h2>

      <ul>
      <% @brand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field margin_left_40">
    <%= f.label :chinese_name %>
    <%= f.text_field :chinese_name %><span class="red">*</span>
  </div>
  <div class="field margin_left_40">
    <%= f.label :english_name %>
    <%= f.text_field :english_name %>
  </div>
  <div class="field margin_left_40">
    <%= f.label :pinyin %>
    <%= f.text_field :pinyin %>
  </div>
  <div class="field margin_left_40">
    <%= f.label :web_address %>
    <%= f.text_field :web_address %>
  </div>
  <div class="field margin_left_40">
    <%= f.label :company_name %>
    <%= f.text_field :company_name %><span class="red">*</span>
  </div>
  <div class="field margin_left_40">
    <%= f.label :company_introduction %>
    <%= f.text_area :company_introduction %>
  </div>
  <div class="field margin_left_40">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field margin_left_40">
    <%= f.label :active %>
    <%= f.radio_button :active, '1', :checked => true %>
    <%= f.label '激活' %>
    <%= f.radio_button :active, '0' %>
    <%= f.label '关闭' %>
  </div>
  <div class="field margin_left_40">
    <%= f.label :update_by %>
    <%= f.text_field :update_by %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
