<h1>Listing brands</h1>

<table>
  <tr>
    <th>Chinese name</th>
    <th>English name</th>
    <th>Pinyin</th>
    <th>Web address</th>
    <th>Company introduction</th>
    <th>Image url</th>
    <th>Active</th>
    <th>Update by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.chinese_name %></td>
    <td><%= brand.english_name %></td>
    <td><%= brand.pinyin %></td>
    <td><%= brand.web_address %></td>
    <td><%= brand.company_introduction %></td>
    <td><%= brand.image_url %></td>
    <td><%= brand.active %></td>
    <td><%= brand.update_by %></td>
    <td><%= link_to 'Show', admin_brand_path(brand) %></td>
    <td><%= link_to 'Edit', edit_admin_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', admin_brand_path(brand), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

