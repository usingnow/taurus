<% @skus.each do |sku| %>
  <tr>
    <td><%= sku.number %></td>
    <td><%= sku.name %></td>
    <td><%= sku.sku_category_id %></td>
    <td><%= sku.unit %></td>
    <td><%= sku.sku_type %></td>
    <td><%= sku.status %></td>
    <td><%= sku.sales_status %></td>
    <td><%= sku.updated_at %></td>
    <td><%= link_to '商品组成', 'sku_productships?sku_id='+sku.id.to_s %></td>
    <td><%= link_to '相册', 'sku_images?sku_id='+sku.id.to_s %></td>
    <td><%= link_to 'Show', admin_sku_path(sku) %></td>
    <td><%= link_to 'Edit', edit_admin_sku_path(sku) %></td>
    <td><%= link_to 'Destroy', admin_sku_path(sku), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

