<table>
  <tr>
    <th><%= t('attributes.sku.number') %></th>
    <th><%= t('attributes.sku.name') %></th>
    <th><%= t('attributes.sku.sku_category_id') %></th>
    <th><%= t('attributes.sku.unit') %></th>
    <th><%= t('attributes.sku.sku_type') %></th>
    <th><%= t('attributes.sku.status') %></th>
