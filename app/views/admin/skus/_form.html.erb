<%= form_for([:admin,@sku]) do |f| %>
  <% if @sku.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.template.header', :count => @sku.errors.size, :model => t('models.sku')) %></h2>

      <ul>
      <% @sku.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><span class="red">*</span><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :name %><span class="red">*</span><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :brand_id %><span class="red">*</span><br />
    <%= f.text_field :brand_id %>
  </div>
  <div class="field">
    <%= f.label :sku_category_id %><span class="red">*</span><br />
    <%= f.text_field :sku_category_id %>
  </div>
  <div class="field">
    <%= f.label :unit %><span class="red">*</span><br />
    <%= f.text_field :unit %>
  </div>
  <div class="field">
    <%= f.label :specification %><span class="red">*</span><br />
    <%= f.text_field :specification %>
  </div>
  <div class="field">
    <%= f.label :delivery_day %><span class="red">*</span><br />
    <%= f.text_field :delivery_day %>
  </div>
   <div class="field">
    <%= f.label :delivery_description %><br />
    <%= f.text_area :delivery_description %>
  </div>
  <div class="field">
    <%= f.label :sku_type %><br />
    <%= f.radio_button :sku_type,'1', :checked => true %>
    <%= f.label '在库品' %>
    <%= f.radio_button :sku_type,'2' %>
    <%= f.label '直送品' %>
    <%= f.radio_button :sku_type,'3' %>
    <%= f.label '非在库' %>
    <%= f.radio_button :sku_type,'4' %>
    <%= f.label '未定' %>
    <%= f.radio_button :sku_type,'5' %>
    <%= f.label '劳务费用' %>
  </div>
  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :size %><br />
    <%= f.text_field :size %>
  </div>
  <div class="field">
    <%= f.label :can_return %><br />
    <%= f.radio_button :can_return,'false', :checked => true %>
    <%= f.label '否' %>
    <%= f.radio_button :can_return,'true' %>
    <%= f.label '是' %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.cktext_area :description, :toolbar=>'Full', :width=>'800px', :height=>'200px' %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :can_on_be_half %><br />
    <%= f.radio_button :can_on_be_half,'false', :checked => true %>
    <%= f.label '否' %>
    <%= f.radio_button :can_on_be_half,'true' %>
    <%= f.label '是' %>
  </div>
  <div class="field">
    <%= f.label :classifcation %><br />
    <%= f.select :classifcation,"<option value='1'>单品</option><option value='2'>大包装</option><option value='3'>大大包装</option><option value='4'>组合品</option>" %>
  </div>
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>
  <div class="field">
    <%= f.label :advertisement %><br />
    <%= f.text_area :advertisement %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.radio_button :status,'1' %>
    <%= f.label '已确认' %>
    <%= f.radio_button :status,'2', :checked => true %>
    <%= f.label '暂停销售' %>
  </div>
  <div class="field">
    <%= f.label :sales_status %><br />
    <%= f.radio_button :sales_status,'0' %>
    <%= f.label '已上架' %>
    <%= f.radio_button :sales_status,'1', :checked => true %>
    <%= f.label '未上架' %>
  </div>
  <div class="field">
    <%= f.label :cost_bef_tax %><br />
    <%= f.text_field :cost_bef_tax %>
  </div>
  <div class="field">
    <%= f.label :cost_aft_tax %><br />
    <%= f.text_field :cost_aft_tax %>
  </div>
  <div class="field">
    <%= f.label :market_price %><br />
    <%= f.text_field :market_price %>
  </div>
  <div class="field">
    <%= f.label :assembling_fee_bef_tax %><br />
    <%= f.text_field :assembling_fee_bef_tax %>
  </div>
  <div class="field">
    <%= f.label :assembling_fee_aft_tax %><br />
    <%= f.text_field :assembling_fee_aft_tax %>
  </div>
  <div class="field">
    <%= f.label :installation_cost_bef_tax %><br />
    <%= f.text_field :installation_cost_bef_tax %>
  </div>
  <div class="field">
    <%= f.label :insatllation_cost_aft_tax %><br />
    <%= f.text_field :insatllation_cost_aft_tax %>
  </div>
  <div class="field">
    <%= f.label :total_sale %><br />
    <%= f.text_field :total_sale %>
  </div>
  <div class="actions">
    <% if @sku.id == nil %>
      <%= f.submit '下一步' %>
    <% else %>
      <%= f.submit %>
    <% end %>
  </div>
<% end %>
