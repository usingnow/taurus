<%= form_for([:admin,@product_category]) do |f| %>
  <% if @product_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.template.header', :count => @product_category.errors.size, :model => t('models.product_category'))  %></h2>

      <ul>
      <% @product_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :parent_id %><span class="red">*</span><br />
    <%= f.text_field :parent_id %>
  </div>
  <div class="field">
    <%= f.label :number %><span class="red">*</span><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :name %><span class="red">*</span><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
