<h1>Listing product_categories</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Number</th>
    <th>Name</th>
    <th>Description</th>
    <th>Create by</th>
    <th>Update by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_categories.each do |product_category| %>
  <tr>
    <td><%= product_category.parent_id %></td>
    <td><%= product_category.number %></td>
    <td><%= product_category.name %></td>
    <td><%= product_category.description %></td>
    <td><%= product_category.create_by %></td>
    <td><%= product_category.update_by %></td>
    <td><%= link_to 'Show', admin_product_category_path(product_category) %></td>
    <td><%= link_to 'Edit', edit_admin_product_category_path(product_category) %></td>
    <td><%= link_to 'Destroy', admin_product_category_path(product_category), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

