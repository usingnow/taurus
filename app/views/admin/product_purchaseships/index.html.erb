<h1>采购单商品列表</h1>

<table class="grid">
  <thead>
    <tr>
      <th>#</th>
      <th>商品</th>
      <th>数量</th>
      <th>含税单价</th>
      <th>合计金额</th>
      <th>交货日期</th>
      <th></th>
    </tr>
  </thead>
<% @product_purchaseships.each_with_index do |product_purchaseship,index| %>
  <tr class="<%= set_odd_even_class index %>" group="<%= index %>">
    <td><%= index+1 %></td>
    <td><%= product_purchaseship.product.name %></td>
    <td><%= product_purchaseship.quantity %></td>
    <td><%= product_purchaseship.unit_price_aft_tax %></td>
    <td><%= product_purchaseship.total_amount %></td>
    <td><%= product_purchaseship.delivery_date %></td>
    <td><%= link_to '删除', admin_product_purchaseship_path(product_purchaseship), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />



