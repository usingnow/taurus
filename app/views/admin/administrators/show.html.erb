<div class="form-actions">
  <%= link_to "<i class='icon-edit'></i> 修改".html_safe, edit_admin_administrator_path(@administrator), :class => "btn btn-primary" if can? :update, Administrator %>
  <%= link_to "<i class='icon-arrow-left'></i> 返回".html_safe, admin_administrators_path, :class => "btn pull-right" %>
</div>

<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.login_no' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.login_no %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.status' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= { 1 => "激活", 0 => "锁定" }[@administrator.status] %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.email' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.email %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.address' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.address %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.phone' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.phone %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.fax' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.fax %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.mobile' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.mobile %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'attributes.administrator.zip' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @administrator.zip %></span>
      </div>
    </div>
    <!-- 需要能够列出所属管理组
    <div class="control-group">
      <label class="control-label">所属管理员组</label>
      <div class="controls">
      </div>
    </div>
    -->
  </fieldset>
</form>





