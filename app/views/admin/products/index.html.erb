<h1>素材商品列表</h1>

<div class="grid_button">
  <%= link_to '新建素材商品', new_admin_product_path %>
</div>

<table class="grid">
  <thead>
    <tr>
      <th><%= t('attributes.product.product_id') %></th>
      <th><%= t('attributes.product.name') %></th>
      <th><%= t('attributes.product.unit') %></th>
      <th><%= t('attributes.product.brand_chinese_name') %></th>
      <th><%= t('attributes.product.specification') %></th>
      <th><%= t('attributes.product.model') %></th>
      <th><%= t('attributes.product.manufacturer') %></th>
      <th><%= t('attributes.product.updated_at') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @products.each_with_index do |product,index| %>
  <tr class="<%= set_odd_even_class index %>" group="<%= index %>">
    <td><%= product.product_id %></td>
    <td><%= product.name %></td>
    <td><%= product.unit %></td>
    <td><%= product.brand.chinese_name %></td>
    <td><%= product.specification %></td>
    <td><%= product.model %></td>
    <td><%= product.manufacturer %></td>
    <td><%= product.updated_at %></td>
    <td><%= link_to 'Show', admin_product_path(product) %></td>
    <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
    <td><%= link_to 'Destroy', admin_product_path(product), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @products %>