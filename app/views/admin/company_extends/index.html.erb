<div class="form-actions">
  <%= search_form_for [:admin,@search], :class => "form-inline" do |f| %>
    <%= f.text_field :company_no_cont, :placeholder => "编号", :class => "trk-non-inline-margin" %>
    <%= f.text_field :company_name_cont, :placeholder => "企业名称", :class => "trk-non-inline-margin" %>
    <%= f.text_field :user_login_no_cont, :placeholder => "帐号", :class => "trk-non-inline-margin" %>
    <%= f.submit "查询", :class => "btn btn-primary" %>
  <% end %>
  <hr />
  <%= link_to "<i class='icon-plus-sign'></i> 新增企业会员".html_safe, new_admin_company_extend_path, :class => "btn btn-primary" if can? :create, CompanyExtend %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>会员编号</th>
      <th>登录账号</th>
      <th>企业名称</th>
      <th>注册时间</th>
      <th>所属组</th>
      <th>账号状态</th>
      <th>仓库</th>
      <th>操作</th>
    </tr>
  </thead>
<% @company_extends.each_with_index do |company_extend,index| %>
  <tr class="<%= set_odd_even_class index %>">
    <td><%= index+1 %></td>
    <td><%= link_to company_extend.company_no, admin_company_extend_path(company_extend) %></td>
    <td><%= company_extend.user.login_no %></td>
    <td><%= company_extend.company_name %></td>
    <td><%= company_extend.created_at %></td>
    <td><%= company_extend.user.role.name %></td>
    <td><%= format_user_status company_extend.user.status %></td>
    <td><%= company_extend.user.store.name %></td>
    <td><%= link_to t('admin.actions.edit.menu'), edit_admin_company_extend_path(company_extend.user_id), :class => "btn btn-primary trk-btn-short" if can? :update, CompanyExtend %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @company_extends, :renderer => BootstrapPagination::Rails%>

