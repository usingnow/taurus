<h1>图片列表</h1>

<div class="grid_button">
  <%= link_to "新增图片", new_content_image_path %>
</div>

<table class="grid">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.image.page') %></th>
      <th><%= t 'activerecord.attributes.image.location' %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each_with_index do |image,index| %>
      <tr class="<%= set_odd_even_class index %>" group="<%= index %>" >
        <td><%= index+1 %></td>
        <td><%= get_image_page image.page %></td>
        <td><%= get_image_location image.page, image.location %></td>
        <td><%= link_to '显示', content_image_path(image) %></td>
        <td><%= link_to '编辑', edit_content_image_path(image) %></td>
        <td><%= link_to '删除', content_image_path(image), :confirm => '确定删除么?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>