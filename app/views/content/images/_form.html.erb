<%= simple_form_for([:content,@image]) do |f| %>
  <%= f.error_notification %>

  <div class="attributes">
    <%= f.input :page do
      f.collection_select :page, @image.page_enum , :first, :second, :checked => 0
    end %>
    <%= f.input :location do %>
      <%= f.collection_select :location, @image.location_enum(0) , :first, :second, :checked => 0 %>
      <em  class="instruction">请参照右图设置位置 --> </em>
    <% end %>

    <%= f.input :image %>
  </div>

  <%= image_tag "/assets/admin/homepage_cms.png", :class => "cms_layout_indicator" %>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>




