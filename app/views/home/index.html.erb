    <ul class="h_ul">
      <li class="h_li"><%= link_to "更多…", commodity_category_path(1769) %></li>
    </ul>
  </div>
  <div class="sku_list_left_col"> <!--SKU List's left column -->
    <%= image_cms(3, :width => "220px", :height => "369px") %>
  </div>
