<div id="banner_2">
  <h2 class="bar_image_220 bar_center">您浏览过的商品</h2>  <!--2012/01/15 - Jimmy -->
  <ul class="recent_visited_ul">
    <% @sku_browsing_histories.each do |history| %>
    <li class="recent_visited_li">
      <%= link_to (image_tag history.sku.main_img, :width => "40px", :height => "40px;"), commodity_sku_detail_path(history.sku_id) %>
      <div>
        <i style="font-style:normal"><%= link_to history.sku.name, commodity_sku_detail_path(history.sku_id) %></i>
        <i style="font-style:normal"><%= number_to_currency history.sku.cost_aft_tax, :unit => "￥" %></i>
      </div>
    </li>
    <% end %>
  </ul>
</div>
<div id="banner_3">
  <h2 class="bar_image_550">新品推荐</h2>
  <ul class="h_ul sku_list_ul margin_0">
    <% @recommendation.each do |recommend| %>
      <li class="h_li sku_list_li height_auto">
        <%= link_to (image_tag recommend.sku.main_img, :width => "120px", :height => "120px"), commodity_sku_detail_path(recommend.sku_id) %>
        <p class="sku_list_p overflow_text"><%= link_to recommend.sku.name, commodity_sku_detail_path(recommend.sku_id) %></p>
        <!--<p class="sku_list_p">市场价：&yen;99999.00</p>-->
        <strong>现价：&yen;<%= recommend.sku.cost_aft_tax %></strong>
      </li>
    <% end %>
  </ul>
</div>
