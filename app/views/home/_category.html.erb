              <% unless sons.empty? %>
                <dt><%= link_to child.name, commodity_category_path(child) %></dt>
                <dd>
                  <% sons.each do |son| %>
                    <i><%= link_to son.name, commodity_category_path(son) %></i>
                  <% end %>
                </dd>
