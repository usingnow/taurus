<table>
  <thead>
    <tr>
      <th>#</th>
      <th><%= t 'activerecord.attributes.brand.chinese_name' %></th>
      <th><%= t 'activerecord.attributes.brand.english_name' %></th>
      <th><%= t 'activerecord.attributes.brand.company_name' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @promotion_product_temps.each_with_index do |temp,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= temp.brand.chinese_name %></td>
      <td><%= temp.brand.english_name %></td>
      <td><%= temp.brand.company_name %></td>
      <td>
        <%= link_to t('admin.actions.delete.menu'),
                    promotion_promotion_product_temp_path(temp), :confirm => t('admin.actions.delete.confirm'),
                    :method => :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div id="show_info">
  <%= search_form_for @search, :url => promotion_promotion_product_temps_path do |f| %>
    <%= hidden_field_tag :products_selection, 2 %>
    <ul>
      <li>
        <%= f.label :chinese_name %>
        <%= f.text_field :chinese_name_cont %>
      </li>
      <li>
        <%= f.label :english_name %>
        <%= f.text_field :english_name_cont %>
      </li>
      <li>
        <%= f.label :company_name %>
        <%= f.text_field :company_name_cont %>
        <%= f.submit t('admin.misc.search') %>
      </li>
    </ul>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th><%= t 'activerecord.attributes.brand.chinese_name' %></th>
      <th><%= t 'activerecord.attributes.brand.english_name' %></th>
      <th><%= t 'activerecord.attributes.brand.company_name' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @brands.each_with_index do |brand,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= brand.chinese_name %></td>
      <td><%= brand.english_name %></td>
      <td><%= brand.company_name %></td>
      <td>
        <%= link_to t('admin.misc.add_new'),
                    promotion_promotion_product_temps_path(:selection_parameter => brand.id, :products_selection => 2),
                    :method => :post %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5">
        <%= will_paginate @brands %>
      </td>
    </tr>
  </tfoot>
</table>

<input type="button" value="确定" onclick="window.close();">
