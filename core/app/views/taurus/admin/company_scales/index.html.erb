<div class="well">
  <%= search_form_for [:admin,@search], :class => "form-inline" do |f| %>
    <%= f.text_field :name_cont, :placeholder => t('activerecord.attributes.taurus/company_scale.name'), :class => "trk-non-inline-margin" %>
    <%= f.submit t('admin.misc.search'), :class => "btn btn-primary trk-btn-inline" %>
  <% end %>
  
  <hr />

  <a href="<%= new_admin_company_type_path %>" class="btn btn-primary" id="create_tag">
    <i class="icon-plus-sign"></i>
    <%= t('admin.actions.new.title',:model => t('activerecord.models.taurus/company_scale')) %>
  </a>
</div>

<%= flash_messages %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/company_scale.name') %></th>
      <th><%= t('activerecord.attributes.taurus/company_scale.sequence') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <tbody>
    <% @company_scales.each_with_index do |company_scale,index| %>
      <tr class="<%= cycle "odd", "even" %>">
        <td><%= index+1 %></td>
        <td><%= company_scale.name %></td>
        <td><%= company_scale.sequence %></td>
        <td>
          <a href="<%= edit_admin_company_scale_path(company_scale) %>" 
             class="btn btn-primary trk-btn-short update_tag">
            <%= t('admin.actions.edit.menu') %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr><td colspan="4"><%= will_paginate @company_scales, :renderer => BootstrapPagination::Rails %></td></tr>
  </tfoot>
</table>


