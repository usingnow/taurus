<div class="well">
  <%= link_to "<i class='icon-edit'></i> #{t('admin.actions.edit.menu')}".html_safe, edit_admin_supplier_path(@supplier), :class => "btn btn-primary" %>
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_suppliers_path, :class => "btn pull-right" %>
</div>

<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/supplier.number' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @supplier.number %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/supplier.name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @supplier.name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/supplier.contact_name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @supplier.contact_name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/supplier.contact_phone' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @supplier.contact_phone %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/supplier.remarks' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @supplier.remarks %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/supplier.status' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= format_boolean(@supplier.status) %></span>
      </div>
    </div>
  </fieldset>
</form>