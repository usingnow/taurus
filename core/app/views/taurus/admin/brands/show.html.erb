<div class="form-actions">
  <%= link_to "<i class='icon-edit'></i> #{t('admin.actions.edit.menu')}".html_safe, edit_admin_brand_path(@brand), :class => "btn btn-primary" %>
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_brands_path, :class => "btn pull-right" %>
</div>

<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.image' %></label>
      <div class="controls">
        <%= image_tag @brand.image.url %>
      </div>
    </div> 

    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.chinese_name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @brand.chinese_name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.english_name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @brand.english_name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.pinyin' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @brand.pinyin %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.web_address' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @brand.web_address %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.company_name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @brand.company_name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.company_description' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @brand.company_description %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/brand.status' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= format_boolean(@brand.status) %></span>
      </div>
    </div>
  </fieldset>
</form>