<div class="well">
  <%= search_form_for [:admin,@search], :class => "form-inline" do |f| %>
    <%= f.text_field :chinese_name_cont, :placeholder => t('activerecord.attributes.taurus/brand.chinese_name'), :class => "trk-non-inline-margin" %>
    <%= f.collection_select :status_eq, Taurus::Brand::STATUS, :first, :second,
                            :include_blank => "全部", :class => "trk-non-inline-margin" %>
    <%= f.submit t('admin.misc.search'), :class => "btn btn-primary trk-btn-inline" %>
  <% end %>
  <hr />
  <a href="<%= new_admin_brand_path %>" class="btn btn-primary" id="create_tag">
    <i class="icon-plus-sign"></i>
    <%= t('admin.actions.new.title',:model => t('activerecord.models.taurus/brand')) %>
  </a>
</div>

<%= flash_messages %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/brand.chinese_name') %></th>
      <th><%= t('activerecord.attributes.taurus/brand.english_name') %></th>
      <th><%= t('activerecord.attributes.taurus/brand.company_name') %></th>
      <th><%= t('activerecord.attributes.taurus/brand.updated_at') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <tbody>
  <% @brands.each_with_index do |brand,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to brand.chinese_name, admin_brand_path(brand) %></td>
      <td><%= brand.english_name %></td>
      <td><%= brand.company_name %></td>
      <td><%= brand.updated_at %></td>
      <td>
        <a href="<%= edit_admin_brand_path(brand) %>" class="btn btn-primary trk-btn-short update_tag">
          <%= t('admin.actions.edit.menu') %>
        </a>

        <a href="<%= admin_brand_path(brand) %>" class="btn btn-danger trk-btn-short destroy_tag"
           data-method="delete" data-confirm="<%= t('admin.actions.delete.confirm') %>">
          <%= t('admin.actions.delete.menu') %>
        </a>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr><td colspan='6'><%= will_paginate @brands, :renderer => BootstrapPagination::Rails %></td></tr>
  </tfoot>
</table>