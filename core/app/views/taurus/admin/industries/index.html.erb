<div class="well">
  <%= search_form_for [:admin,@search], :class => "form-inline" do |f| %>
    <%= f.text_field :name_cont, :placeholder => t('activerecord.attributes.taurus/industry.name'), 
                     :class => "trk-non-inline-margin span2" %>
    <%= f.submit t('admin.misc.search'), :class => "btn btn-primary trk-btn-inline" %>
  <% end %>

  <hr />

  <a href="<%= new_admin_industry_path %>" class="btn btn-primary" id="create_tag">
    <i class="icon-plus-sign"></i>
    <%= t('admin.actions.new.title',:model => t('activerecord.models.taurus/industry')) %>
  </a>
</div>

<%= flash_messages %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/industry.name') %></th>
      <th><%= t('activerecord.attributes.taurus/industry.sequence') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <tbody>
    <% @industries.each_with_index do |industry,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= industry.name %></td>
        <td><%= industry.sequence %></td>
        <td>
          <a href="<%= edit_admin_industry_path(industry) %>" class="btn btn-primary trk-btn-short update_tag">
            <%= t('admin.actions.edit.menu') %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr><td colspan='4'><%= will_paginate @industries, :renderer => BootstrapPagination::Rails %></td></tr>
  </tfoot>
</table>


