<div class="form-actions">
  <%= search_form_for [:admin,@search], :class => "form-inline" do |f| %>
    <%= f.text_field :number_cont, :placeholder => t('activerecord.attributes.taurus/product_category.number'), :class => "trk-non-inline-margin" %>
    <%= f.text_field :name_cont, :placeholder => t('activerecord.attributes.taurus/product_category.name'), :class => "trk-non-inline-margin" %>
    <%= f.submit t('admin.misc.search'), :class => "btn btn-primary" %>
  <% end %>
  <hr />
  <%= link_to "#{content_tag(:i, '', :class => 'icon-plus-sign')} #{t('admin.actions.new.title', :model => t('activerecord.models.taurus/product_category'))}".html_safe, new_admin_product_category_path, :target => "_blank", :class => "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/product_category.number') %></th>
      <th><%= t('activerecord.attributes.taurus/product_category.name') %></th>
      <th><%= t('activerecord.attributes.taurus/product_category.status') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <tbody>
  <% @product_categories.each_with_index do |product_category,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to product_category.number, admin_product_category_path(product_category) %></td>
      <td><%= product_category.name %></td>
      <td><%= format_boolean product_category.status %></td>
      <td><%= link_to t('admin.actions.edit.menu'), edit_admin_product_category_path(product_category), :class => "btn btn-primary" %></td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr><td colspan='6'><%= will_paginate @product_categories, :renderer => BootstrapPagination::Rails %></td></tr>
  </tfoot>
</table>