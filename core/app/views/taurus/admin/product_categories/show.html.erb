<div class="well">
  <%= link_to "<i class='icon-edit'></i> #{t('admin.actions.edit.menu')}".html_safe, edit_admin_product_category_path(@product_category), :class => "btn btn-primary" %>
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_product_categories_path, :class => "btn pull-right" %>
</div>

<%= flash_messages %>

<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/product_category.parent_name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @product_category.parent_name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/product_category.number' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @product_category.number %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/product_category.name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @product_category.name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/product_category.description' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @product_category.description %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/product_category.sequence' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @product_category.sequence %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/product_category.status' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= format_boolean @product_category.status %></span>
      </div>
    </div>
  </fieldset>
</form>