<div class="well">
  <a href="<%= edit_admin_product_category_path(@product_category) %>" class="btn btn-primary" 
     id="update_tag">
    <i class="icon-edit"></i>
    <%= t('admin.actions.edit.menu') %>
  </a>

  <a href="<%= admin_product_category_custom_properties_path(@product_category) %>" 
     class="btn btn-primary" id="custom_tag">
    <i class="icon-wrench"></i>
    <%= t('activerecord.attributes.taurus/product_category.custom_property') %>
  </a>    

  <a href="<%= admin_product_category_path(@product_category) %>" data-method="delete"
     data-confirm="<%= t('admin.actions.delete.confirm') %>" 
     class="btn btn-danger" id="destroy_tag">
    <i class="icon-remove-sign"></i>
    <%= t('admin.actions.delete.menu') %>
  </a>  
  
  <div class="pull-right">
    <%= back_to_parent %>

    <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_product_categories_path, :class => "btn" %>
  </div>
</div>

<%= flash_messages %>

<%= simple_form_for(@product_category, :url => "#", :html => {:class => 'form-horizontal'})  do |f| %>
  <fieldset>
    <%= f.input :parent_name, :disabled => true %>
    <%= f.input :parent_id, :as => :hidden, :disabled => true %>
    <%= f.input :number, :disabled => true %>
    <%= f.input :name, :disabled => true %>
    <%= f.input :description, :input_html => { :rows => 5 }, :disabled => true %>
    <%= f.input :sequence, :disabled => true %>
    <%= f.input :status, :disabled => true %>
    <%= f.input :category_type, :collection => Taurus::ProductCategory::CATEGORY_TYPE, 
                  :label_method => :second, :value_method => :first, 
                  :item_wrapper_class => 'inline', :as => :radio_buttons, :disabled => true %>
  </fieldset>
<% end %>

<ul class="nav nav-tabs">
  <li class="active">
    <a href="#"><%= t('activerecord.attributes.taurus/product_category.children') %></a>
  </li>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/product_category.number') %></th>
      <th><%= t('activerecord.attributes.taurus/product_category.name') %></th>
      <th><%= t('activerecord.attributes.taurus/product_category.status') %></th>
      <th><%= t('activerecord.attributes.taurus/product_category.custom_property') %></th>
    </tr>
  </thead>
  <tbody>
  <% @product_category.children.each_with_index do |product_category,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to product_category.number, admin_product_category_path(product_category) %></td>
      <td><%= product_category.name %></td>
      <td><%= format_boolean product_category.status %></td>
      <td><%= format_boolean product_category.custom_property? %></td>
    </tr>
  <% end %>
  </tbody>
</table>
