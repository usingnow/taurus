<%= render :partial => "taurus/admin/shared/product_tabs", 
           :locals => { :current => "details", :type => "edit" } %>

<%= simple_form_for([:admin,@product], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <%= f.input :number %>
    <%= f.input :name %>
    <%= f.input :product_category_name, :url => autocomplete_product_category_name_admin_products_path, 
                :input_html => { :id_element => '#product_product_category_id' }, :as => :autocomplete %>
    <%= f.input :product_category_id, :as => :hidden %>
    <%= f.input :brand %>
    <%= f.input :weight %>
    <%= f.input :price_after_tax %>
    <%= f.input :tax %>
    <%= f.input :market_price %>
    <%= f.input :place_of_origin %>
    <%= f.input :unit %>
    <%= f.input :manufacturer %>
    <%= f.input :description, :input_html => { :rows => 5 } %>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
