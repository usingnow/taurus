<div class="well">
  <%= link_to "#{content_tag(:i, '', :class => "icon-arrow-left")} #{t('admin.misc.back')}".html_safe, admin_products_path(:'q[product_type_eq]' => 1), :class => "btn pull-right" %>
</div>


<%= simple_form_for(@product, :url => combined_create_admin_products_path, 
                    :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <%= f.input :number %>
    <%= f.input :name %>
    <%= f.input :product_category_name, :url => autocomplete_combined_category_name_admin_products_path, 
                :input_html => { :id_element => '#product_product_category_id' }, :as => :autocomplete %>
    <%= f.input :product_category_id, :as => :hidden %>
    <%= f.input :weight %>
    <%= f.input :price_after_tax %>
    
    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
