<%= render :partial => "taurus/admin/shared/product_tabs", :locals => { :current => "sales" } %>

<%= simple_form_for(@product, :url => update_sales_status_admin_product_path(@product), :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <%= f.input :sales_starts_at %>
    <%= f.input :sales_ends_at %>
    <%= f.input :sales_status %>
    <%= f.input :if_shown_on_web %>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>