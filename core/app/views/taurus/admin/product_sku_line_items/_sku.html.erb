<%= hidden_field_tag :sku_id, @sku.id %>

<%= simple_form_for(@sku, :url => "#", :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <%= f.input :number, :disabled => true %>
    <%= f.input :name, :disabled => true %>
    <%= f.input :product_category_name, :disabled => true %>
    <%= f.input :brand_chinese_name, :disabled => true %>
    <%= f.input :supplier_name, :disabled => true %>
    <%= f.input :weight, :disabled => true %>
    <%= f.input :place_of_origin, :disabled => true %>
    <%= f.input :unit, :disabled => true %>
    <%= f.input :model, :disabled => true %>
    <%= f.input :specifications, :disabled => true %>
    <%= f.input :dimensions, :disabled => true %>
    <%= f.input :cost_before_tax, :disabled => true %>
    <%= f.input :cost_after_tax, :disabled => true %>
    <%= f.input :delivery_days, :disabled => true %>
    <%= f.input :delivery_notice, :disabled => true %>
    <%= f.input :remarks, :input_html => { :rows => 5 }, :disabled => true %>
  </fieldset>
<% end %>
 