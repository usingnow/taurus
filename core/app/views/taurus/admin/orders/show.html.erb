<div class="well">
  <a href="#" class="btn btn-primary"><i class="icon-truck"></i> 安排订单出库</a>
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_orders_path, :class => "btn pull-right" %>
</div>

<%= simple_form_for @order, :url => "#", :html => { :class => "form-horizontal" } do |f| %>
  <fieldset>
    <%= f.input :number, :disabled => true, :input_html => {:class => "span2"} %>
    <%= f.input :customer_name, :disabled => true, :input_html => {:class => "span2"}%>
    <%= f.input :total_payment, :disabled => true , :input_html => {:class => "span2"}%>
    <%= f.input :state, :collection => Taurus::Order::STATE, :label_method => :second, 
                :value_method => :first, :as => :select, :disabled => true, :input_html => {:class => "span2"} %>
    <%= f.input :remarks_internal, :disabled => true, :input_html => {:class => "span3"} %>
    <%= f.input :remarks_by_customer, :disabled => true, :input_html => {:class => "span3"} %>
    <%= f.input :created_at, :disabled => true, :input_html => {:class => "span1"} %>

  </fieldset>
<% end %>