<%= simple_form_for([:admin, @shipping_cost],:html => {:class => 'form-horizontal'})  do |f| %>
  <%= f.error_notification %>
  <%= flash_messages %>
  
  <fieldset>
    <%= f.input :cost %>
    <%= f.input :remarks, :input_html => { :rows => "5", :class => "span4" } %>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
