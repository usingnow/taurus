<%= simple_form_for([:admin,@alipay],:html => {:class => 'form-horizontal'})  do |f| %>
  <%= f.error_notification %>
  <%= success %>
  
  <fieldset>
    <%= f.input :partner %>
    <%= f.input :seller_email %>
    <%= f.input :subject %>
    <%= f.input :body %>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
