<h1>订货公司列表</h1>

<div class="grid_button">
  <%= link_to '新增订货公司', new_admin_ordering_company_path, :target => "_blank" if can? :create, OrderingCompany %>
</div>

<table class="grid">
  <thead>
    <tr>
      <th>#</th>
      <th>名称</th>
      <th>地址</th>
      <th>电话</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
<% @ordering_companies.each_with_index do |ordering_company,index| %>
  <tr class="<%= set_odd_even_class index %>">
    <td><%= index+1 %></td>
    <td><%= ordering_company.name %></td>
    <td><%= ordering_company.address %></td>
    <td><%= ordering_company.phone %></td>
    <td><%= link_to '详情', admin_ordering_company_path(ordering_company), :target => "_blank" %></td>
    <td><%= link_to '修改', edit_admin_ordering_company_path(ordering_company), :target => "_blank" if can? :update, OrderingCompany %></td>
  </tr>
<% end %>
</table>

