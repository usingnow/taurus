<div class="well">
  <%= link_to "<i class='icon-edit'></i> #{t('admin.actions.edit.menu')}".html_safe, edit_admin_product_category_custom_property_path(@custom_property.product_category_id, @custom_property), :class => "btn btn-primary" %>
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_product_category_custom_properties_path(@custom_property.product_category_id), :class => "btn pull-right" %>
</div>

<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/custom_property.name' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @custom_property.name %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/custom_property.property_type' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= format_property_type @custom_property.property_type %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/custom_property.remarks' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= @custom_property.remarks %></span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t 'activerecord.attributes.taurus/custom_property.status' %></label>
      <div class="controls">
        <span class="uneditable-input"><%= format_boolean(@custom_property.status) %></span>
      </div>
    </div>
  </fieldset>
</form>