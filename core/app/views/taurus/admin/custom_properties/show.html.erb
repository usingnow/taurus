<div class="well">
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_product_category_custom_properties_path(@custom_property.product_category_id), :class => "btn pull-right" %>
</div>

<%= simple_form_for(@custom_property, :url => "#", :html => {:class => 'form-horizontal'})  do |f| %>
  <%= f.error_notification %>
  
  <fieldset>
    <%= f.input :name, :disabled => true %>
    <%= f.input :property_type, :collection => Taurus::CustomProperty::PROPERTY_TYPE, :label_method => :second, 
                :value_method => :first, :include_blank => false, :as => :select, :disabled => true %>
    <%= f.input :remarks, :disabled => true %>
    <%= f.input :status, :disabled => true %>
  </fieldset>
<% end %>