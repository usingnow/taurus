<%= simple_form_for([:admin,@sku], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <%= f.input :name %>
    <%= f.input :product_category_name, :url => autocomplete_product_category_name_admin_skus_path, 
                :input_html => { :id_element => '#sku_product_category_id' }, :as => :autocomplete %>
    <%= f.input :product_category_id, :as => :hidden %>
    <%= f.input :brand_chinese_name, :url => autocomplete_brand_chinese_name_admin_skus_path, 
                :input_html => { :id_element => '#sku_brand_id' }, :as => :autocomplete %>
    <%= f.input :brand_id, :as => :hidden %>
    <%= f.input :supplier_name, :url => autocomplete_supplier_name_admin_skus_path, 
                :input_html => { :id_element => '#sku_supplier_id' }, :as => :autocomplete %>
    <%= f.input :supplier_id, :as => :hidden %>
    <%= f.input :weight %>
    <%= f.input :place_of_origin %>
    <%= f.input :unit %>
    <%= f.input :model %>
    <%= f.input :specifications %>
    <%= f.input :dimensions %>
    <%= f.input :cost_before_tax %>
    <%= f.input :cost_after_tax %>
    <%= f.input :delivery_days %>
    <%= f.input :delivery_notice %>
    <%= f.input :remarks, :input_html => { :rows => 5 } %>
    
    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
