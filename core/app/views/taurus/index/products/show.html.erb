<% @product.product_images.each do |product_image| %>
  <%= image_tag product_image.image.url(:small) %>
<% end %>


<%= simple_form_for(@product, :url => "#", :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <%= f.input :number, :disabled => true %>
    <%= f.input :name, :disabled => true %>
    <%= f.input :product_category_name, :disabled => true %>
    <%= f.input :brand, :disabled => true %>
    <%= f.input :weight, :disabled => true %>
    <%= f.input :price_after_tax, :disabled => true %>
    <%= f.input :tax, :disabled => true %>
    <%= f.input :market_price, :disabled => true %>
    <%= f.input :place_of_origin, :disabled => true %>
    <%= f.input :unit, :disabled => true %>
    <%= f.input :manufacturer, :disabled => true %>

    
  </fieldset>
<% end %>

<%=raw @product.description %>


自定义属性:
<% @product.custom_property_values.each do |custom_property_value| %>
   <div>
     <%= custom_property_value.custom_property.name %>
     ：
     <%= custom_property_value.custom_property.property_type == 9 ? 
         custom_property_value.text_value : custom_property_value.string_value %>
   </div>
<% end %>
