<table>
  <thead>
    <tr>
      <th>#</th>
      <th><%= t 'activerecord.attributes.sku_category.number' %></th>
      <th><%= t 'activerecord.attributes.sku_category.name' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @promotion_product_temps.each_with_index do |temp,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= temp.sku_category.number %></td>
      <td><%= temp.sku_category.name %></td>
      <td>
        <%= link_to t('admin.actions.delete.menu'),
                    promotion_promotion_product_temp_path(temp), :confirm => t('admin.actions.delete.confirm'),
                    :method => :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div id="show_info">
  <%= search_form_for @search, :url => promotion_promotion_product_temps_path do |f| %>
    <%= hidden_field_tag :products_selection, 1 %>
    <ul>
      <li>
        <%= f.label :number %>
        <%= f.text_field :number_eq %>
      </li>
      <li>
        <%= f.label :name %>
        <%= f.text_field :name_cont %>
        <%= f.submit t('admin.misc.search') %>
      </li>
    </ul>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th><%= t 'activerecord.attributes.sku_category.number' %></th>
      <th><%= t 'activerecord.attributes.sku_category.name' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each_with_index do |category,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= category.number %></td>
      <td><%= category.name %></td>
      <td>
        <%= link_to t('admin.misc.add_new'),
                    promotion_promotion_product_temps_path(:selection_parameter => category.id, :products_selection => 1),
                    :method => :post %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5">
        <%= will_paginate @categories %>
      </td>
    </tr>
  </tfoot>
</table>

<input type="button" value="确定" onclick="window.close();">
