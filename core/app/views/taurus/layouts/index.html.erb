<!DOCTYPE html>
<html>
<head>
  <title>Taurus</title>
  <%= stylesheet_link_tag 'taurus/index', :media => "all" %>
  <%= stylesheet_link_tag params[:controller], :media => "all" %>
  <%= javascript_include_tag "taurus/index" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "采恪电子商务管理平台", index_home_index_path, :class => "brand" %>
        <div class="nav-collapse">
          <ul class="nav pull-right">
            <li>
              <a href="<%= index_cart_product_line_items_path %>">
                <i class="icon-shopping-cart"></i>
                购物车（<strong id="cart_amount">0</strong>）
              </a>
            </li>  
            <% if current_user %>
              <li> 
                <a href="<%= index_user_centers_path %>">
                  <i class="icon-user"></i><%= current_user.userable.name %>
                </a>
              </li>
              <li>
                <%= link_to '退出', destroy_user_session_path, :method => :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to "登录", user_session_path %>
              </li>
              <li><%= link_to "个人用户注册", new_user_registration_path %></li>
              <li><%= link_to "企业用户注册", index_company_sign_up_path %></li>
            <% end %>  
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
