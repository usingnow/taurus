<!DOCTYPE html>
<html>
<head>
  <title>Taurus</title>
  <%= stylesheet_link_tag 'taurus/admin', :media => "all" %>
  <%= stylesheet_link_tag params[:controller], :media => "all" %>
  <%= javascript_include_tag "taurus/admin" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    jQuery(document).ready(function () {
      <%= yield(:ready) %> //动态加载js
    });
  </script>
</head> 
<body class="trk-body-padding-bottom-60">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">
          采恪电子商务管理平台
        </a>
        <div class="nav-collapse">
          <%=raw components %>
        </div>
        <ul class="nav pull-right">
          <li>
            <a href="/assets/Taurus使用帮助文档v0.1.pdf">
              <i class="icon-question-sign"></i>帮助
            </a>
          </li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-user"></i> <%= current_administrator.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t('admin.functions.my_account.base_info'), edit_admin_my_account_path %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t('admin.misc.sign_out'), destroy_administrator_session_path, :method => :delete %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <%=raw breadcrumb %>
    <div class="row">
      <div class="span2 show-grid">
        <%=raw functions %>
      </div>
      <div class="span10">
        <%= yield %>
      </div>
    </div>
  </div>

  <div class="navbar navbar-fixed-bottom">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <ul class="nav pull-right">
          <li><a href="http://usingnow.github.com" target="blank"><i class="icon-github"></i>Tracker@Github</a></li>
          <li><a><i class="icon-phone"></i>+86 21 1234 5678</a></li>
          <li><a><i class="icon-envelope-alt"></i>opensourc(AT)usingnow.com</a></li>
          <li><a style="padding-top: 6px; padding-bottom:6px;"><%= image_tag "logo.png" %></a></li>
          <li><a>Copyright © 2010-2012 Tracker Enterprise Consulting 上海采恪</a></li>
        </ul> 
      </div>
    </div>
  </div>
</body>
</html>
