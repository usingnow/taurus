<!DOCTYPE html>
<html>
<head>
  <title>Taurus</title>
  <%= stylesheet_link_tag 'taurus/admin', :media => "all" %>
  <%= stylesheet_link_tag params[:controller], :media => "all" %>
  <%= javascript_include_tag "taurus/admin" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    jQuery(document).ready(function () {
      <%= yield(:ready) %> //动态加载js
    });
  </script>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">
          采恪电子商务管理平台
        </a>
        <div class="nav-collapse">
          <%=raw components %>
        </div>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-user"></i> <%= current_administrator.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t('admin.functions.my_account.base_info'), edit_admin_my_account_path %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t('admin.misc.sign_out'), destroy_administrator_session_path, :method => :delete %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <%=raw breadcrumb %>
    <div class="row">
      <div class="span2 show-grid">
        <%=raw functions %>
      </div>
      <div class="span10">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
