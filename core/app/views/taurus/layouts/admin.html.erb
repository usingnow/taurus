<!DOCTYPE html>
<html>
<head>
  <title>Ebiz</title>
  <%= stylesheet_link_tag 'taurus/admin', :media => "all" %>
  <%= stylesheet_link_tag params[:controller], :media => "all" %>
  <%= javascript_include_tag "taurus/admin" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    jQuery(document).ready(function () {
      jQuery(document).keydown(function(event) {
        if (event.keyCode == 13) {
          jQuery('form').each(function() {
            event.preventDefault();
          });
        }
      });

      <%= yield(:ready) %> //动态加载js
    });
  </script>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">采恪电子商务管理平台</a>
        <div class="nav-collapse">
          <%=raw components %>
          <ul class="nav pull-right">
            <li class="active">
              <a href="#"><i class="icon-user"></i><%= current_administrator.name %></a>
            </li>
            <li>
              <%= link_to '退出', destroy_administrator_session_path, :method => :delete %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <ul class="breadcrumb breakcrumb-admin-home">
      <li>
        <%= link_to "首页", admin_home_index_path %> <span class="divider">/</span>
      </li>
      <li>
        <a href="#">Library</a> <span class="divider">/</span>
      </li>
      <li class="active">Data</li>
    </ul>
    <div class="row">
      <% if session[:component]["functions"] %>
        <div class="span2 show-grid">
          <%=raw functions %>
        </div>
      <% end %>
      <div class="span10">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
