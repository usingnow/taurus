<table class="grid">
  <thead>
    <tr>
      <th>#</th>
      <th>商品编号</th>
      <th>商品名称</th>
      <th>单位</th>
      <th>单价</th>
      <th>数量</th>
      <th>安装费用</th>
      <th>组装费用</th>
      <th>合计</th>
      <th>最小可销售数量</th>
    </tr>
  </thead>
  <tbody id="back_order_skus">
    <% @back_order_skus.each_with_index do |cart,index| %>
      <tr class="<%= set_odd_even_class(index) %>" id="back_order_sku<%= cart.id %>">
        <td><%= index+1 %></td>
        <td><%= cart.sku.number %></td>
        <td><%= cart.sku.name %></td>
        <td><%= cart.sku.unit %></td>
        <td><%= cart.promotion_unit_price %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.promotion_installation_cost %></td>
        <td><%= cart.promotion_assembling_fee %></td>
        <td><%= cart.promotion_subtotal %></td>
        <td><%= cart.sku.available_skus(@user.store_id) %></td>
      </tr>
    <% end %>
    <% @user.admin_gifts.each do |gift| %>
      <tr class="<%= cycle("odd","even") %>">
        <td>赠</td>
        <td><%= gift.sku.number %></td>
        <td><%= gift.sku.name %></td>
        <td><%= gift.sku.unit %></td>
        <td>0</td>
        <td><%= gift.amount %></td>
        <td>0</td>
        <td>0</td>
        <td>0</td>
        <td><%= gift.sku.available_skus(@user.store_id) %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="11" align="right" id="total_amount">
        运费：<%= number_to_currency @user.admin_promo_carriage_cost, :unit => "￥" %>,
        安装费合计：<%= number_to_currency @user.admin_promo_installation_cost, :unit => "￥" %>,
        组装费合计：<%= number_to_currency @user.admin_promo_assembling_fee, :unit => "￥" %>,
        总计:<%= number_to_currency @user.admin_promo_price+ @user.admin_promo_carriage_cost, :unit => "￥" %>
      </td>
    </tr>
  </tbody>
</table>

<hr />

<div class="attributes">
  <div class="split_content_left">
    <p>
      <%= label_tag "支付方式：" %>
      <%= @inner_order_payment.procedure.display_name %>
    </p>
    <p>
      <%= label_tag "发票类型：" %>
      <% if @inner_order_payment.invoice_type == 0 %>
        普通
      <% elsif @inner_order_payment.invoice_type == 1 %>
        增值税发票
      <% else %>
        不需要
      <% end %>
    </p>
    <p>
      <%= label_tag "发票抬头：" %>
      <% if @inner_order_payment.is_invoice_head == 0 %>
        个人
      <% else %>
        单位
      <% end %>
    </p>
  </div>
  <div class="split_content_right">
      <p>
        <%= label_tag "收货人姓名：" %>
        <%= @inner_order_address.name %>
      </p>
      <p>
        <%= label_tag "所属地区：" %>
        <%= @inner_order_address.district.city.province.name %>&nbsp;
        <%= @inner_order_address.district.city.name %>&nbsp;
        <%= @inner_order_address.district.name %>
      </p>
      <p>
        <%= label_tag "地址：" %>
        <%= @inner_order_address.address %>
      </p>
      <p>
        <%= label_tag "固定电话：" %>
        <%= @inner_order_address.phone %><br />
      </p>
      <p>
        <%= label_tag "手机：" %>
        <%= @inner_order_address.mobile %><br />
      </p>
      <p>
        <%= label_tag "电子邮箱：" %>
        <%= @inner_order_address.email %><br />
      </p>
      <p>
        <%= label_tag "邮编：" %>
        <%= @inner_order_address.zip %><br />
      </p>
    </div>
  <div class="clear"></div>
</div>

<div class="middle_button">
  <%= form_tag order_back_orders_path do %>
    <%= hidden_field_tag 'user_id', @user.id %>
    <%= hidden_field_tag :online_promotion_ids, @user.current_promotion_ids %>
    <input type="button" value="上一步" onclick="history.back()"/>
    <input type="submit" value="提交" />
  <% end %>
</div>



