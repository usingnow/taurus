<% if @order.errors.any? %>
  <div id="error_explanation">
    <h2><%= t('activerecord.errors.template.header', :count => @order.errors.size, :model => "拣货出库")  %></h2>

    <ul>
    <% @order.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= render 'condition' %>

<%= form_tag(condition_admin_orders_path) do%>
  <div class="attributes">
    <%= text_area_tag 'order[inner_note]', nil, :cols=>105, :rows=>5 %>
  </div>
  <%= submit_tag '确定拣货出库' %>
<% end %>


