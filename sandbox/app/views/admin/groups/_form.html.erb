<%= simple_form_for([:admin,@group]) do |f| %>
  <%= f.error_notification %>

  <div class="attributes">
    <div class="split_content_left">
      <p>
        <%= f.input :number %>
      </p>
      <p>
        <%= f.input :name %>
      </p>
      <p>
        <%= f.input :desc %>
      </p>
    </div>
    <div class="clear"></div>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>