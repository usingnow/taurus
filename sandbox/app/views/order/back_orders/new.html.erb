<%= simple_form_for @user, :url => user_order_back_orders_path, :remote => true, :html => {:method => :get}  do |f| %>
  <div class="attributes">
    <div class="split_content_left">
      <label class="string required" for="user_index"><abbr title="required">*</abbr> 会员编号或帐号</label>
      <%= f.input :index, :label => false, :input_html => {:class => "required", :required => "required"} %>
    </div>
    <div class="split_content_right">
      <%= f.button :submit, :value => '查询' %>
    </div>
    <div class="clear"></div>
  </div>
<% end %>
<div class="attributes" id="user_info">
  <div class="split_content_left">
    <p>
      <%= label_tag '下单日期：'%>
      <%= @date %>
    </p>
    <p>
      <%= label_tag '联系电话：' %><br />
    </p>
    <p>
      <%= label_tag '手机：' %><br />
    </p>

  </div>
  <div class="split_content_right">
     <p>
       <%= label_tag '联系人姓名：' %><br />
     </p>
     <p>
       <%= label_tag '电子邮件：' %><br />
     </p>
     <p>
       <%= label_tag '邮编：' %><br />
     </p>
  </div>
  <div class="clear"></div>
</div>

<div class="middle_button" id="next_step">

</div>






