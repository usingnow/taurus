<div class="well">
  <a href="<%= edit_admin_announcement_path(@announcement) %>" class="btn btn-primary" id="update_tag">
    <i class="icon-edit"></i>
    <%= t('admin.actions.edit.menu') %>
  </a>

  <%= link_to "#{content_tag(:i, '', :class => "icon-arrow-left")} #{t('admin.misc.back')}".html_safe, admin_announcements_path, :class => "btn pull-right" %>
</div>

<%= flash_messages %>

<%= simple_form_for([:admin, @announcement], :html => { :class => 'form-horizontal' }) do |f| %>

  <fieldset>
    <%= f.input :title, :disabled => true %>
    <%= f.input :internal_title, :disabled => true %>
  </fieldset>
<% end %>


<ul class="nav nav-tabs">
  <li class="active">
    <a href="#"><%= t('activerecord.attributes.taurus/announcement.description') %></a>
  </li>
</ul>

<div>
  <%=raw @announcement.description %>
</div>