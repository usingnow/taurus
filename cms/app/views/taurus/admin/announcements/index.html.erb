<div class="well">
  <a href="<%= new_admin_announcement_path %>" class="btn btn-primary" id="create_tag">
    <i class="icon-plus-sign"></i>
    <%= t('admin.actions.new.title',:model => t('activerecord.models.taurus/announcement')) %>
  </a>
</div>

<%= flash_messages %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/announcement.title') %></th>
      <th><%= t('activerecord.attributes.taurus/announcement.created_at') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <tbody>
    <% @announcements.each_with_index do |announcement,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= link_to announcement.title, admin_announcement_path(announcement) %></td>
        <td><%= announcement.created_at %></td>
        <td>
          <a href="<%= edit_admin_announcement_path(announcement) %>" 
             class="btn btn-primary trk-btn-short update_tag">
            <%= t('admin.actions.edit.menu') %>
          </a>
          <a href="<%= admin_announcement_path(announcement) %>" data-method="delete"
             data-confirm="<%= t('admin.actions.delete.confirm') %>"
             class="btn btn-primary trk-btn-short destroy_tag">
            <%= t('admin.actions.delete.menu') %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4"><%= will_paginate @announcements, :renderer => BootstrapPagination::Rails %></td>
    </tr>
  </tfoot>
</table>


