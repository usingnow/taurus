<div class="well">
  <%= link_to "#{content_tag(:i, '', :class => "icon-arrow-left")} #{t('admin.misc.back')}".html_safe, admin_announcements_path, :class => "btn pull-right" %>
</div>

<%= simple_form_for([:admin, @announcement], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <%= f.input :title %>
    <%= f.input :internal_title %>
    <%= f.input :description, :as => :ckeditor, :input_html => { :toolbar => 'Full' } %>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>




