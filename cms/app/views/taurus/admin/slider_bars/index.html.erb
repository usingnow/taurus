<div class="well">
  <a href="<%= new_admin_slider_bar_path %>" class="btn btn-primary" id="create_tag">
    <i class="icon-plus-sign"></i>
    <%= t('admin.actions.new.title',:model => t('activerecord.models.taurus/slider_bar')) %>
  </a>
</div>

<%= flash_messages %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/slider_bar.image') %></th>
      <th><%= t('activerecord.attributes.taurus/slider_bar.name') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <tbody>
    <% @slider_bars.each_with_index do |slider_bar,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= link_to image_tag(slider_bar.image.url(:small)), admin_slider_bar_path(slider_bar) %></td>
        <td><%= slider_bar.name %></td>
        <td>
          <a href="<%= edit_admin_slider_bar_path(slider_bar) %>" 
             class="btn btn-primary trk-btn-short update_tag">
            <%= t('admin.actions.edit.menu') %>
          </a>
          <a href="<%= admin_slider_bar_path(slider_bar) %>" data-method="delete"
             data-confirm="<%= t('admin.actions.delete.confirm') %>"
             class="btn btn-primary trk-btn-short destroy_tag">
            <%= t('admin.actions.delete.menu') %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


