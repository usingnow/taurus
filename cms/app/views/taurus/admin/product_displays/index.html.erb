<div class="well">
  <a href="<%= new_admin_product_display_path %>" class="btn btn-primary" id="create_tag">
    <i class="icon-plus-sign"></i>
    <%= t('admin.actions.new.title',:model => t('activerecord.models.taurus/product_display')) %>
  </a>
</div>

<%= flash_messages %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/product.number') %></th>
      <th><%= t('activerecord.attributes.taurus/product.name') %></th>
      <th><%= t('activerecord.attributes.taurus/product_display.sequence') %></th>
      <th><%= t('admin.misc.operation') %></th>
    </tr>
  </thead>
  <tbody>
    <% @product_displays.each_with_index do |product_display,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= product_display.product.number %></td>
        <td><%= product_display.product.name %></td>
        <td><%= product_display.sequence %></td>
        <td>
          <a href="<%= edit_admin_product_display_path(product_display) %>" 
             class="btn btn-primary trk-btn-short update_tag">
            <%= t('admin.actions.edit.menu') %>
          </a>
          <a href="<%= admin_product_display_path(product_display) %>" data-method="delete"
             data-confirm="<%= t('admin.actions.delete.confirm') %>"
             class="btn btn-primary trk-btn-short destroy_tag">
            <%= t('admin.actions.delete.menu') %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5"><%= will_paginate @product_displays, :renderer => BootstrapPagination::Rails %></td>
    </tr>
  </tfoot>
</table>


