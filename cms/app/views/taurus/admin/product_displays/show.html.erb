<div class="well">
  <%= link_to "<i class='icon-edit'></i> #{t('admin.actions.edit.menu')}".html_safe, edit_admin_product_display_path(@product_display), :class => "btn btn-primary" %>
  <%= link_to "<i class='icon-arrow-left'></i> #{t('admin.misc.back')}".html_safe, admin_product_displays_path, :class => "btn pull-right" %>
</div>

<%= simple_form_for(@product_display, :url => "#",:html => {:class => 'form-horizontal'}) do |f| %>
  <%= flash_messages %>
  <fieldset>
    <%= f.input :product_name, :disabled => true %>
    <%= f.input :sequence, :disabled => true %>
  </fieldset>
<% end %>