<div class="alert alert-info">
  <button class="close rule_close" data-dismiss="alert" data-id="<%= object.id %>">Ã—</button>

  <table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= t('activerecord.attributes.taurus/user.email') %></th>
	      <th><%= t('activerecord.attributes.taurus/user.name') %></th>
	    </tr>
	  </thead>
	  <tbody id="user_list">
      <% object.promotion_rule_users.each do |promotion_rule_user| %>
        <tr>
		      <td>
		      	<%= promotion_rule_user.user.email %>
		      	<%= hidden_field_tag :'user_id[]', promotion_rule_user.user_id %>
		      </td>
		      <td><%= promotion_rule_user.user.taurus_userable.name %></td>
		    </tr>
      <% end %>
	  </tbody>
	</table>

  <div class="control-group string required">
  	<label class="string required control-label">
  		<%= object.rule_type_name %>
  	</label>
		<div class="controls">
			<%= autocomplete_field_tag 'email', '', autocomplete_user_email_admin_promotions_path %>
		</div>
	</div>
</div>