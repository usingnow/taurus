<div class="well">
  <%= search_form_for [:admin,@search], :class => "form-inline" do |f| %>
    <%= f.text_field :sku_number_cont, :placeholder => t('activerecord.attributes.taurus/sku.number'), :class => "trk-non-inline-margin" %>
    <%= f.text_field :sku_name_cont, :placeholder => t('activerecord.attributes.taurus/sku.name'), :class => "trk-non-inline-margin" %>
    <%= f.submit t('admin.misc.search'), :class => "btn btn-primary trk-btn-inline" %>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.taurus/sku.number') %></th>
      <th><%= t('activerecord.attributes.taurus/sku.name') %></th>
      <th><%= t('activerecord.attributes.taurus/store_sku_line_item.reserved') %></th>
      <th><%= t('activerecord.attributes.taurus/store_sku_line_item.available') %></th>
      <th><%= t('activerecord.attributes.taurus/store_sku_line_item.out_of_stock') %></th>
      <th><%= t('activerecord.attributes.taurus/store_sku_line_item.in_stock') %></th>
    </tr>
  </thead>
  <tbody>
  <% @store_sku_line_items.each_with_index do |line_item,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to line_item.sku.number, admin_sku_path(line_item.sku_id), :target => "_blank" %></td>
      <td><%= line_item.sku.name %></td>
      <td><%= line_item.reserved %></td>
      <td><%= line_item.available %></td>
      <td><%= line_item.out_of_stock %></td>
      <td><%= line_item.in_stock %></td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr><td colspan='7'><%= will_paginate @store_sku_line_items, :renderer => BootstrapPagination::Rails %></td></tr>
  </tfoot>
</table>